include(@CMAKE_BINARY_DIR@/CDash/Common.ctest)

SET_PROPERTY(GLOBAL PROPERTY SubProject "Release")
SET(CTEST_BUILD_CONFIGURATION           "Release")

CTEST_START(Continuous)
CTEST_UPDATE(SOURCE "${CTEST_SOURCE_DIRECTORY}" RETURN_VALUE UPDATE_COUNT)
if(UPDATE_COUNT)
  CTEST_CONFIGURE(BUILD "${CTEST_BINARY_DIRECTORY}"
                  OPTIONS "-DCMAKE_BUILD_TYPE=${CTEST_BUILD_CONFIGURATION}")
  CTEST_BUILD(BUILD "${CTEST_BINARY_DIRECTORY}")
  CTEST_TEST(BUILD "${CTEST_BINARY_DIRECTORY}")
  CTEST_SUBMIT()
endif(UPDATE_COUNT)